@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<br />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<a href="/AdminCategory/AddCategory/" class="btn btn-outline-success" style="position:absolute;right:30px;width:210px">Yeni Kategori</a>
<br />
<html>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h2 class="card-title" style="color:red;margin-left:500px;"><b>Projeye Dair Notlar Sayfası</b></h2>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr class="w3-red">
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Not Başlığı
                            </th>
                            <th style="width: 20%">
                                İçerik
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @item.AboutID
                            </td>
                            <td>
                                @item.AboutDetails2
                            </td>
                            <td>
                                @item.AboutDetails1
                            </td>
                <td class="project-actions text-right">

                                <a class="btn btn-warning btn-sm" href="/About/EditAbout/@item.AboutID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                               
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
@Html.Action("AboutPartial", "About")