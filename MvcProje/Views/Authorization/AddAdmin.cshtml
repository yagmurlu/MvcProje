@model EntityLayer.Dto.AdminLoginDto

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1 style="color:purple;margin-left:450px;">Admin Ekleme Sayfası</h1>
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Admin Adı:")
    @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AdminName, "", new { @class = "text-primary" })
    @Html.Label("Admin Kullanıcı Maili:")
    @Html.TextBoxFor(x => x.AdminUsername, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AdminUsername, "", new { @class = "text-primary" })
    <br />
    @Html.Label("Şifre Belirleyiniz:")
    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AdminPassword, "", new { @class = "text-primary" })
    <br />
    @Html.Label("Role Seçiniz:")
    @Html.DropDownListFor(x => x.AdminRoleId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AdminRoleId, "", new { @class = "text-primary" })
    <br />

    <button class="btn btn-success" id="btnKaydet">Kaydet</button>
    <script>
        $('#btnKaydet').click(function () {
            swal("Kaydedildi!", "Yeni Admin Başarılı Bir Şekilde Oluşturldu!", "success");
        });
    </script>
</div>
}
