
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="col-md-3">
        <a href="/Message/NewMessage/" class="btn btn-primary btn-block mb-3">Yeni Posta</a>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Seçenekler</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item active">
                        <a href="/Contact/Index" class="nav-link">
                            <i class="fas fa-mail-bulk"></i> İletişim
                            <span class="badge bg-primary float-right">@ViewBag.contact</span>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="/Message/Inbox/" class="nav-link">
                            <i class="fas fa-inbox" onclick="location.href='/Message/Inbox'"></i> Gelen Mesajlar
                            <i class="right fas fa-angellist"></i>
                            <span class="badge bg-primary float-right">@ViewBag.receiverMail</span>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-inbox"></i> Okunmamış Mesajlar
                                    &nbsp;<span class="badge bg-primary float-right">@ViewBag.unreadMessage</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-inbox"></i> Okunan Mesajlar
                                    &nbsp; <span class="badge bg-primary float-right">@ViewBag.readMessage</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item active">
                        <a href="#" class="nav-link">
                            <i class="fas fa-inbox"></i> Önemli
                            <span class="badge bg-primary float-right">@ViewBag.importantMail</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Message/SendBox/" class="nav-link">
                            <i class="far fa-envelope"></i> Gönderilen Mesajlar
                            <span class="badge bg-primary float-right">@ViewBag.sendMail</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Message/DraftMessages/" class="nav-link">
                            <i class="far fa-file-alt"></i> Taslaklar
                            <span class="badge bg-warning float-right">@ViewBag.draftMail</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-filter"></i> Spam
                            <span class="badge bg-warning float-right">@ViewBag.spamMail</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="far fa-trash-alt"></i> Çöp Kutusu
                            <span class="badge bg-warning float-right">@ViewBag.trashMail</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Diğer</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="far fa-circle text-danger"></i>
                            Önemli
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="far fa-circle text-warning"></i> Tanıtımlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="far fa-circle text-primary"></i>
                            Sosyal
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>

    <!-- /.row -->


</body>
</html>